{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "ChefMind",
  "version": "3.0.0",
  "identifier": "com.chefmind.tauri",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "plugins": {
    "devtools": {
      "enabled": true
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "msi",
      "nsis",
      "deb",
      "rpm",
      "app",
      "dmg"
    ],
    "category": "Productivity",
    "copyright": "Copyright © 2025 ChefMind Team",
    "longDescription": "ChefMind 智食谱 - AI驱动的智能菜谱生成平台，配备企业级数据存储和性能监控架构",
    "shortDescription": "智能厨房助手，AI驱动的菜谱生成平台",
    "icon": [
      "icons/icon.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "nsis": {
        "displayLanguageSelector": true,
        "languages": ["English", "SimpChinese"]
      }
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": true
      },
      "deb": {
        "depends": ["libwebkit2gtk-4.1-dev", "libappindicator3-dev", "librsvg2-dev"]
      }
    }
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "label": "main",
        "title": "ChefMind 智食谱",
        "width": 1400,
        "height": 900,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "resizable": true,
        "decorations": true,
        "transparent": false,
        "visible": true,
        "focus": true,
        "fullscreen": false,
        "maximized": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' data: https:; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; connect-src 'self' https://* http://* ws://* wss://*;"
    }
  }
}