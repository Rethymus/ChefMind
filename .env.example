# ChefMind 智食谱 - 环境变量配置示例
# 复制此文件为 .env 并填入实际的配置值

# 应用基础配置
VITE_APP_TITLE=ChefMind 智食谱
VITE_APP_DESCRIPTION=AI驱动的智能菜谱生成平台
VITE_APP_VERSION=1.0.0

# API 配置
VITE_API_BASE_URL=https://api.chefmind.com
VITE_API_TIMEOUT=10000

# AI 服务配置
VITE_AI_API_KEY=your_ai_api_key_here
VITE_AI_API_URL=https://api.deepseek.com/v1
VITE_AI_MODEL=deepseek-chat

# GLM API 配置
VITE_GLM_API_KEY=your_glm_api_key_here
VITE_GLM_API_BASE_URL=https://open.bigmodel.cn/api/paas/v4
VITE_GLM_MODEL=glm-4

# 第三方服务配置
# 百度地图API (如果需要位置服务)
VITE_BAIDU_MAP_KEY=your_baidu_map_key

# 腾讯云配置 (如果使用腾讯云服务)
VITE_TENCENT_SECRET_ID=your_secret_id
VITE_TENCENT_SECRET_KEY=your_secret_key
VITE_TENCENT_REGION=ap-shanghai

# 开发环境配置
VITE_DEV_PORT=3000
VITE_DEV_HOST=localhost

# 生产环境配置
VITE_PROD_BASE_URL=https://chefmind.com

# 功能开关
VITE_ENABLE_MOCK=true
VITE_ENABLE_DEBUG=false
VITE_ENABLE_ANALYTICS=false

# 外部链接配置
VITE_BILIBILI_SEARCH_URL=https://search.bilibili.com/all?keyword=
VITE_DOUYIN_SEARCH_URL=https://www.douyin.com/search/
VITE_XIACHUFANG_SEARCH_URL=https://www.xiachufang.com/search/?keyword=
VITE_XIAOHONGSHU_SEARCH_URL=https://www.xiaohongshu.com/search_result?keyword=